<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/trans_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="id" />

    <TextView
        android:id="@+id/trans_dcind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dcind" />

    <TextView
        android:id="@+id/trans_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="amount" />

    <TextView
        android:id="@+id/trans_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="curr" />

    <TextView
        android:id="@+id/trans_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="desc" />

    <TextView
        android:id="@+id/trans_postingdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="postingdate" />

    <TextView
        android:id="@+id/trans_valuedate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="valuedate" />

    <TextView
        android:id="@+id/trans_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="type" />

</LinearLayout>